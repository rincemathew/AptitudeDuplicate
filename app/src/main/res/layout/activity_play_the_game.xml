<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayTheGame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/scoreLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:id="@+id/scoreTextView" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="25sp"
                android:id="@+id/time"
                android:textStyle="bold"
                android:textColor="#fff" />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:gravity="center"
                android:padding="5dp"
                android:drawablePadding="1dp"
                android:background="@color/liteblue"
                android:textSize="25sp"
                android:id="@+id/skip"
                android:drawableRight="@drawable/ic_skip_next_black_24dp"
                android:textStyle="bold"
                android:text="Skip"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/quizProgress"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="15dp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answerButtonLayout"
        android:layout_below="@+id/scoreLayout"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:background="@drawable/roundededittext"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Questions"
                android:id="@+id/questionTextView"
                android:textSize="20sp"/>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answerButtonLayout"
        android:orientation="vertical"
        android:layout_above="@+id/admobLinear"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 1"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:background="@drawable/normal"
                android:layout_margin="5dp"
                android:id="@+id/button1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 2"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:background="@drawable/normal"
                android:layout_margin="5dp"
                android:id="@+id/button2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 3"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/normal"
                android:id="@+id/button3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 4"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:background="@drawable/normal"
                android:layout_margin="5dp"
                android:id="@+id/button4"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/admobLinear"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">




    </LinearLayout>

</RelativeLayout>